<h2>Add New Node</h2>
<% if flash[:notice] %>
  <div id='notice' class='alert alert-success'><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div id='error' class='alert alert-error'><%= flash[:error] %></div>
<% end %>
<%= form_tag "/node/create" do %>
  <%= label_tag :name, 'Name: ' %>
  <%= text_field_tag :name %><br />
  <%= label_tag :description, 'Description: ' %>
  <%= text_area_tag :description, nil, :rows => "10", :cols => "25"%><br />
  <%= hidden_field_tag :parent, params[:parent] %>
  <%= submit_tag 'Add', :class => "btn btn-large btn-primary" %>
<% end %>