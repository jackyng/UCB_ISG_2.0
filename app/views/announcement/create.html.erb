<h2>Announcement Form</h2>
<% if flash[:notice] %>
  <div id='notice' class='alert alert-success'><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
  <div id='error' class='alert alert-error'><%= flash[:error] %></div>
<% end %>
<%= form_tag "/announcement/create" do %>
  <%= label_tag :title, 'Title: ' %>
  <%= text_field_tag :title %><br />
  <%= label_tag :description, 'Description: ' %>
  <%= text_area_tag :description, nil, :rows => "10", :cols => "25"%><br />
  <%= submit_tag 'Submit' ,:class => "btn btn-primary" %>
   &nbsp; &nbsp;
  <a class="btn btn-primary" href="/announcement" data-method="get">Back</a>
<% end %>